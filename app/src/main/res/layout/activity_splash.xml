<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/btn_tryagain"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/margin5"
        android:background="@drawable/capsule_button"
        android:drawableEnd="@drawable/ic_autorenew_black_24dp"
        android:drawableLeft="@drawable/ic_portable_wifi_off_black_24dp"
        android:drawableRight="@drawable/ic_autorenew_black_24dp"
        android:drawableStart="@drawable/ic_portable_wifi_off_black_24dp"
        android:paddingLeft="@dimen/margin10"
        android:paddingRight="@dimen/margin10"
        android:fontFamily="sans-serif-condensed"
        android:text="Try Again"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>
