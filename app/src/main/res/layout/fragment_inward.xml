<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="hacker.l.coldstore.fragments.InwardFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Name*"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_empName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:hint="Enter  Name"
                android:inputType="text"
                android:paddingLeft="@dimen/margin5"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Father Name*"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_empFName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:hint="Enter Father Name"
                android:inputType="text"
                android:paddingLeft="@dimen/margin5"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Mobile Number*"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:hint="Enter Mobile Number"
                android:inputType="number"
                android:paddingLeft="@dimen/margin5"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Whole Sale Number*"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_wholeSaleNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Number"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Variety*"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerVariety"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin10"
                android:spinnerMode="dropdown">

            </android.support.v7.widget.AppCompatSpinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Quantity*"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_qty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:hint="Enter Quantiry"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/margin5"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Floor*"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerFloor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin10"
                android:spinnerMode="dropdown">

            </android.support.v7.widget.AppCompatSpinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Rack*"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerRack"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin10"
                android:spinnerMode="dropdown">

            </android.support.v7.widget.AppCompatSpinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:text="Address"
                android:textColor="@color/purple"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:hint="Enter Address"
                android:inputType="text"
                android:paddingLeft="@dimen/margin5"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin10"
                android:background="@drawable/capsule_button"
                android:text="Submit Inward"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
