<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hacker.l.coldstore.fragments.AboutUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <ImageView
                    android:id="@+id/image_camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignRight="@+id/image_profile"
                    android:layout_marginTop="@dimen/margin5"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@drawable/ic_photo_camera_black_24dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin10"
                android:text="Store Name"
                android:textColor="@color/grey_hard"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:gravity="left|center"
                android:hint="Enter Store Name"
                android:paddingLeft="@dimen/margin10"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin10"
                android:text="Store Phone"
                android:textColor="@color/grey_hard"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:gravity="left|center"
                android:hint="Enter Store Phone"
                android:inputType="number"
                android:paddingLeft="@dimen/margin10"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin10"
                android:text="Store EmailID"
                android:textColor="@color/grey_hard"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:gravity="left|center"
                android:hint="Enter Store EmailId"
                android:paddingLeft="@dimen/margin10"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin10"
                android:text="Store Address"
                android:textColor="@color/grey_hard"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:gravity="left|center"
                android:hint="Enter Store Address"
                android:maxLines="5"
                android:paddingLeft="@dimen/margin10"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin10"
                android:text="Store Owner"
                android:textColor="@color/grey_hard"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_owner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:gravity="left|center"
                android:hint="Enter Store Owner Name"
                android:paddingLeft="@dimen/margin10"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="left|center"
                android:paddingLeft="@dimen/margin10"
                android:text="Store Timing"
                android:textColor="@color/grey_hard"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_timing"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/done_corner_round"
                android:gravity="left|center"
                android:hint="Enter Store Timing"
                android:paddingLeft="@dimen/margin10"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />


            <TextView
                android:id="@+id/tv_update"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin10"
                android:background="@drawable/capsule_button"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
